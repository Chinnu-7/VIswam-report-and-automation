                "options": {
                    "fileName": "report_card.pdf",
                    "marginTop": 0,
                    "marginRight": 0,
                    "marginBottom": 0,
                    "marginLeft": 0,
                    "landscape": false,
                    "printBackground": true
                }
            },
            "id": "44444444-4444-4444-4444-444444444444",
            "name": "Generate PDF",
            "type": "n8n-nodes-base.api2pdf",
            "typeVersion": 1,
            "position": [
                1100,
                240
            ]
        },
        {
            "parameters": {
                "resource": "message",
                "subject": "=Report Card: {{ $node[\"Split Reports\"].json[\"studentName\"] }}",
                "message": "<h1>Student Report Card</h1><p>Dear Principal,</p><p>Please find attached the report card for <b>{{ $node[\"Split Reports\"].json[\"studentName\"] }}</b>.</p>",
                "toEmail": "={{ $node[\"Google Sheets\"].json[\"Email\"] }}",
                "appendAttachements": true,
                "attachments": "={{ $binary.data }}"
            },
            "id": "66666666-6666-6666-6666-666666666666",
            "name": "Send Email",
            "type": "n8n-nodes-base.gmail",
            "typeVersion": 2,
            "position": [
                1540,
                140
            ]
        },
        {
            "parameters": {
                "method": "POST",
                "url": "https://api.whatsapp.com/send",
                "sendBody": true,
                "bodyParameters": {
                    "parameters": [
                        {
                            "name": "phone",
                            "value": "={{ $node[\"Google Sheets\"].json[\"WhatsApp\"] }}"
                        },
                        {
                            "name": "message",
                            "value": "=Hi, here is the report card for {{ $node[\"Split Reports\"].json[\"studentName\"] }}. You can download the PDF and View it by clicking this link: https://viswam-reports-automation.netlify.app/api/reports/{{ $node[\"Split Reports\"].json[\"id\"] }}/render"
                        }
                    ]
                },
                "options": {}
            },
            "id": "77777777-7777-7777-7777-777777777777",
            "name": "Send WhatsApp",
            "type": "n8n-nodes-base.httpRequest",
            "typeVersion": 4.1,
            "position": [
                1540,
                340
            ]
        },
        {
