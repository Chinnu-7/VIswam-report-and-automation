                660,
                240
            ]
        },
        {
            "parameters": {
                "operation": "lookup",
                "spreadsheetId": "YOUR_SPREADSHEET_ID",
                "range": "A:E",
                "lookupColumn": "School Name",
                "lookupValue": "={{ $node[\"Split Reports\"].json[\"schoolName\"] }}",
                "options": {}
            },
            "id": "33333333-3333-3333-3333-333333333333",
